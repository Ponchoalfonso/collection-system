<div class="charges p-2 flex-md-grow-1 vflex">
  <div class="sub-content">
    <h3>Cargos</h3>
    <button id="get-users-charge" type="button" class="btn btn-other" data-toggle="modal" data-target="#new-charge">Nuevo</button>
    <button id="name-target-1" class="btn btn-other dropdown-toggle" type="button">Filtrar usuario</button>
    <input type="date" class="btn btn-other">
    <button id="reset-target-1" class="btn btn-other">Reset</button>
  </div>
  <div class="table-wrapper">
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th># ID</th>
          <th>Cliente</th>
          <th>Descripci√≥n</th>
          <th>Monto</th>
          <th>Fecha</th>
        </tr>
      </thead>
      <tbody id="charges-table">
      <% charges.each do |charge| %>
        <tr class="charge-row" id="charge-<%=charge.id%>">
          <th><%= charge.id %></th>
          <td><%= "#{charge.user.name} #{charge.user.last_name}" %></td>
          <td><%= charge.description %></td>
          <td><%= number_to_currency charge.amount %></td>
          <td><%= charge.created_at.strftime('%FT%T') %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
