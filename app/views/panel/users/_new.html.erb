<div class="modal" id="new-user" tabindex="-1" role="dialog" aria-labelledby="new-userLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content users">
      <div class="section-title">
        <div class="wrapper">
          <h3>Nuevo usuario</h3>
        </div>
      </div>

      <div class="form-container">
        <div class="wrapper">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), format: :json, remote: true) do |f| %>

            <div class="field">
              <%= f.label 'Nombre' %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "text", class: 'form-control' %>
            </div>

            <div class="field">
              <%= f.label 'Apellido paterno' %><br />
              <%= f.text_field :last_name, autofocus: true, autocomplete: "text", class: 'form-control' %>
            </div>

            <div class="field">
              <%= f.label 'Apellido materno' %><br />
              <%= f.text_field :second_last_name, autofocus: true, autocomplete: "text", class: 'form-control' %>
            </div>

            <div class="field">
              <%= f.label 'Número de teléfono' %><br />
              <%= f.phone_field :phone_number, autofocus: true, autocomplete: "tel", class: 'form-control' %>
            </div>

            <div class="field">
              <%= f.label 'Contraseña' %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password",class: 'form-control' %>
            </div>

            <div class="field">
              <%= f.label 'Confirme contraseña' %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
            </div>

            <div class="field">
              <%= f.label 'Rol de usuario' %><br />
              <%= f.select "role_id", options_from_collection_for_select(Role.take(2), "id", "name", "1"), {}, {:class => 'custom-select form-control'} %>
            </div>

            <div class="actions">
              <%= f.submit "Crear cuenta", class: "btn btn-other"%>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>